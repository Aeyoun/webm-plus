<?xml version="1.0" encoding="utf-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" id="https://github.com/zcode/webm-plus" version="3.0" xml:lang="en">
  <name short="WebM Plus">YouTube WebM Plus</name>
