  <author href="http://daniel.priv.no/">Daniel Aleksandersen</author>
  <license href="http://www.opensource.org/licenses/mit-license.php">Licensed under the MIT license. Attribution encouraged.</license>
  <icon src="icon.png" height="64" width="64" />
  <icon src="gfx/favicon.png" height="16" width="16" />
  <preference name="continueTesting" value="true" />
  <preference name="videoSaveButton" value="true" />
  <preference name="filterSearch" value="false" />
  <preference name="hideFlashPromo" value="true" />
  <preference name="hideFlashUpgrade" value="false" />
  <preference name="preventFlash" value="false" />
